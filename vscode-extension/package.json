{
  "name": "project-memory-dashboard",
  "displayName": "Project Memory Dashboard",
  "description": "Visual dashboard for the Project Memory MCP server - track agent workflows, plans, and handoffs",
  "version": "0.2.0",
  "publisher": "project-memory",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/project-memory/project-memory-mcp"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "mcp",
    "model context protocol",
    "ai agents",
    "project management",
    "copilot"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "projectMemory.showDashboard",
        "title": "Show Dashboard",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.openDashboardPanel",
        "title": "Open Full Dashboard (PMD Tab)",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.createPlan",
        "title": "Create New Plan",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.viewPrograms",
        "title": "View Programs",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.deployAgents",
        "title": "Deploy Agents to Workspace",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.deploySkills",
        "title": "Deploy Skills to Workspace",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.listSkills",
        "title": "List Skills",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.deploySkill",
        "title": "Deploy Skill to Workspace",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.deployInstructions",
        "title": "Deploy Instructions to Workspace",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.listInstructions",
        "title": "List Instructions",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.deployCopilotConfig",
        "title": "Deploy All Copilot Config (Agents, Skills, Instructions)",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.deployDefaults",
        "title": "Deploy Default Agents & Instructions",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.updateDefaults",
        "title": "Update Deployed Files from Source",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.refreshData",
        "title": "Refresh Dashboard",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.addToPlan",
        "title": "Add to Plan",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.openAgentFile",
        "title": "Open Agent File",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.openPromptFile",
        "title": "Open Prompt File",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.showCopilotStatus",
        "title": "Show Copilot Status",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.migrateWorkspace",
        "title": "Migrate Workspace to New Identity System",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.showServerLogs",
        "title": "Show Server Logs",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.showDiagnostics",
        "title": "Show Diagnostics",
        "category": "Project Memory"
      },

      {
        "command": "projectMemory.openSettings",
        "title": "Open Settings",
        "category": "Project Memory"
      },
      {
        "command": "project-memory.startSupervisor",
        "title": "Start / Reconnect Supervisor",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.showMcpSessions",
        "title": "Show Active MCP Sessions",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.showMcpInstances",
        "title": "Show MCP Pool Instances",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.scaleUpMcp",
        "title": "Scale Up MCP Pool",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.planExplorer.refresh",
        "title": "Refresh Plans",
        "icon": "$(refresh)",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.planExplorer.toggleArchived",
        "title": "Toggle Archived Plans",
        "icon": "$(archive)",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.openPlanInDashboard",
        "title": "Open in Dashboard",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.deployWithProfile",
        "title": "Deploy with Profile…",
        "icon": "$(cloud-upload)",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.deployAgentFileToWorkspace",
        "title": "Deploy to Current Workspace",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.runFullDiagnostic",
        "title": "Run Full Diagnostic",
        "icon": "$(run)",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.diagnostics.copyValue",
        "title": "Copy Value",
        "icon": "$(clippy)",
        "category": "Project Memory"
      },
      {
        "command": "projectMemory.goToStepFile",
        "title": "Go to File",
        "icon": "$(go-to-file)",
        "category": "Project Memory"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "projectMemory",
          "title": "Project Memory",
          "icon": "resources/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "projectMemory": [
        {
          "type": "webview",
          "id": "projectMemory.dashboardView",
          "name": "Dashboard"
        },
        {
          "type": "tree",
          "id": "projectMemory.planExplorer",
          "name": "Plans"
        },
        {
          "type": "tree",
          "id": "projectMemory.diagnosticsView",
          "name": "Diagnostics"
        }
      ]
    },
    "configuration": {
      "title": "Project Memory",
      "properties": {
        "projectMemory.dataRoot": {
          "type": "string",
          "default": "",
          "description": "Path to the Project Memory data directory (MBS_DATA_ROOT)",
          "scope": "application"
        },
        "projectMemory.agentsRoot": {
          "type": "string",
          "default": "",
          "description": "Path to the agent templates directory (MBS_AGENTS_ROOT)",
          "scope": "application"
        },
        "projectMemory.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh dashboard when files change"
        },
        "projectMemory.autoDeployAgents": {
          "type": "boolean",
          "default": false,
          "description": "Automatically deploy agents when template files are saved"
        },
        "projectMemory.apiPort": {
          "type": "number",
          "default": 3001,
          "description": "Port for the dashboard API server"
        },
        "projectMemory.serverPort": {
          "type": "number",
          "default": 3001,
          "description": "Port for the dashboard API server"
        },
        "projectMemory.mcpPort": {
          "type": "number",
          "default": 3457,
          "description": "Port for the MCP server"
        },

        "projectMemory.skillsRoot": {
          "type": "string",
          "default": "",
          "description": "Path to the skills directory containing skill subdirectories with SKILL.md files",
          "scope": "application"
        },
        "projectMemory.globalSkillsRoot": {
          "type": "string",
          "default": "",
          "description": "Fallback absolute path to main/shared skills source",
          "scope": "application"
        },
        "projectMemory.instructionsRoot": {
          "type": "string",
          "default": "",
          "description": "Path to the instruction files directory (MBS_INSTRUCTIONS_ROOT)",
          "scope": "application"
        },
        "projectMemory.defaultAgents": {
          "type": "array",
          "default": [
            "coordinator",
            "researcher",
            "architect",
            "executor",
            "reviewer",
            "tester",
            "archivist",
            "revisionist",
            "runner"
          ],
          "description": "List of agent names to auto-deploy to new workspaces"
        },
        "projectMemory.defaultInstructions": {
          "type": "array",
          "default": [
            "project-memory-system",
            "mvc-architecture",
            "handoff-protocol"
          ],
          "description": "List of instruction files to auto-deploy to new workspaces"
        },
        "projectMemory.defaultSkills": {
          "type": "array",
          "default": [],
          "description": "List of skill directory names to pre-select when deploying skills"
        },
        "projectMemory.autoDeployOnWorkspaceOpen": {
          "type": "boolean",
          "default": false,
          "description": "Automatically deploy default agents and instructions when opening a workspace"
        },
        "projectMemory.autoDeploySkills": {
          "type": "boolean",
          "default": false,
          "description": "Automatically deploy skills to workspace on open (even if full auto-deploy is off)"
        },
        "projectMemory.deployProfiles": {
          "type": "array",
          "default": [],
          "description": "Named deploy profiles. Each profile specifies which agents, instructions, and skills to deploy. Used by the 'Deploy with Profile' command.",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string", "description": "Profile display name" },
              "agents": { "type": "array", "items": { "type": "string" }, "description": "Agent names to deploy" },
              "instructions": { "type": "array", "items": { "type": "string" }, "description": "Instruction file names to deploy" },
              "skills": { "type": "array", "items": { "type": "string" }, "description": "Skill directory names to deploy" }
            },
            "required": ["name"]
          }
        },
        "projectMemory.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show toast notifications for deployment and server events"
        },
        "projectMemory.notifications.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Master switch for plan/agent lifecycle notifications."
        },
        "projectMemory.notifications.agentHandoffs": {
          "type": "boolean",
          "default": true,
          "description": "Show a notification when an agent hands off to the next agent."
        },
        "projectMemory.notifications.planComplete": {
          "type": "boolean",
          "default": true,
          "description": "Show a notification when a plan is completed (archived)."
        },
        "projectMemory.notifications.stepBlocked": {
          "type": "boolean",
          "default": true,
          "description": "Show a notification when a plan step becomes blocked."
        },
        "projectMemory.dashboard.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable the Project Memory dashboard connection. Set to false to prevent the extension from automatically connecting to the dashboard server on startup. Manual connection via command is still available."
        },
        "projectMemory.containerMode": {
          "type": "string",
          "enum": [
            "auto",
            "local",
            "container"
          ],
          "default": "auto",
          "description": "How to connect to backend services. 'auto' probes for a running container on expected ports before falling back to local server spawn. 'local' always spawns locally. 'container' always connects to container (fails if unavailable).",
          "enumDescriptions": [
            "Probe for container first, fall back to local",
            "Always spawn local server processes",
            "Always connect to container (requires running container)"
          ]
        },
        "projectMemory.containerMcpPort": {
          "type": "number",
          "default": 3000,
          "description": "Port where the containerized MCP server is expected (Streamable HTTP + SSE)"
        },
        "supervisor.startupMode": {
          "type": "string",
          "enum": [
            "off",
            "prompt",
            "auto"
          ],
          "default": "auto",
          "description": "Controls whether the extension auto-starts the Supervisor on activation.",
          "enumDescriptions": [
            "Never start Supervisor automatically",
            "Prompt user before starting Supervisor",
            "Automatically start Supervisor on extension activation"
          ]
        },
        "supervisor.launcherPath": {
          "type": "string",
          "default": "",
          "markdownDescription": "Absolute path to the Supervisor executable or `start-supervisor.ps1` launch script (e.g. `C:\\tools\\project-memory\\start-supervisor.ps1`). This is a **global/user-level** setting — set it once and it applies to all workspaces. Leave empty if `start-supervisor.ps1` is present in your workspace root.",
          "scope": "application"
        },
        "supervisor.detectTimeoutMs": {
          "type": "number",
          "default": 1000,
          "minimum": 100,
          "description": "Timeout (ms) for detecting an already-running Supervisor on activation."
        },
        "supervisor.startupTimeoutMs": {
          "type": "number",
          "default": 15000,
          "minimum": 1000,
          "description": "Maximum time (ms) to wait for Supervisor to reach ready state after launch."
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "projectMemory.planExplorer.refresh",
          "when": "view == projectMemory.planExplorer",
          "group": "navigation"
        },
        {
          "command": "projectMemory.planExplorer.toggleArchived",
          "when": "view == projectMemory.planExplorer",
          "group": "navigation"
        },
        {
          "command": "projectMemory.runFullDiagnostic",
          "when": "view == projectMemory.diagnosticsView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "projectMemory.openPlanInDashboard",
          "when": "viewItem =~ /planItem/",
          "group": "inline"
        },
        {
          "command": "projectMemory.diagnostics.copyValue",
          "when": "viewItem == diagnosticsDetail",
          "group": "inline"
        },
        {
          "command": "projectMemory.goToStepFile",
          "when": "viewItem =~ /hasFileRef/",
          "group": "inline"
        }
      ],
      "explorer/context": [
        {
          "command": "projectMemory.createPlan",
          "group": "projectMemory",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "projectMemory.addToPlan",
          "group": "projectMemory@2",
          "when": "!explorerResourceIsFolder"
        },
        {
          "command": "projectMemory.deployAgentFileToWorkspace",
          "group": "projectMemory@3",
          "when": "resourceFilename =~ /\\.agent\\.md$/"
        }
      ],
      "editor/context": [
        {
          "command": "projectMemory.addToPlan",
          "group": "projectMemory",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --production",
    "esbuild-base": "node esbuild.js",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "compile": "npm run esbuild",
    "replay": "node ./tools/replay-cli-runner.js",
    "replay:list": "npm run replay -- list-scenarios",
    "replay:run": "npm run replay -- run",
    "watch": "npm run esbuild-watch",
    "pretest": "npm run esbuild",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "build-webview": "cd webview && npm run build"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.109.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2",
    "mocha": "^11.7.5",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "glob": "^13.0.1"
  },
  "overrides": {
    "diff": "^8.0.3",
    "minimatch": "^10.2.1",
    "qs": "^6.14.2"
  }
}
