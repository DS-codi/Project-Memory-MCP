{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022"],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "out",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/*.ts",
    "src/chat/**/*.ts",
    "src/commands/**/*.ts",
    "src/deployer/**/*.ts",
    "src/providers/**/*.ts",
    "src/server/**/*.ts",
    "src/services/**/*.ts",
    "src/supervisor/**/*.ts",
    "src/ui/**/*.ts",
    "src/utils/**/*.ts"
  ],
  "exclude": ["node_modules", "webview"]
}
